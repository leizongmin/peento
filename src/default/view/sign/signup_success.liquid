{% include "front/inc/header" %}

  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Sign Up Success</h3>
          </div>
          <div class="panel-body">
            {% if error %}
            <div class="alert alert-danger">{{error|escape}}</div>
            {% endif %}
            Hello {{user_info.display_name|escape}}, welcome!
            Your e-mail address is {{user_info.email|escape}},
            now you can <a href="/signin" class="btn btn-xs btn-primary">click here</a> to sign in.
        </div>
      </div>
    </div>
  </div>

{% include "front/inc/footer" %}
