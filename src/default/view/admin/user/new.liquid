{% assign title = "New User" %}
{% include "admin/inc/header" %}

<div class="container">
  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <h1 class="text-center">{{title|escape}}</h1>
      <form class="form-horizontal" role="form" method="post" enctype="multipart/form-data">
        <input type="hidden" name="_csrf" value="{{_csrf|escape}}">
        {% if error %}
          <div class="alert alert-danger">{{error|escape}}</div>
        {% endif %}
        <div class="form-group">
          <label for="ipt-email" class="col-sm-2 control-label">E-mail</label>
          <div class="col-sm-10">
            <input type="email" name="email" class="form-control" id="ipt-email" placeholder="E-mail Address" value="{{user.email|escape}}">
          </div>
        </div>
        <div class="form-group">
          <label for="ipt-password" class="col-sm-2 control-label">Password</label>
          <div class="col-sm-10">
            <input type="password" name="password" class="form-control" id="ipt-password" placeholder="Password" value="{{user.password|escape}}">
          </div>
        </div>
        <div class="form-group">
          <label for="ipt-display_name" class="col-sm-2 control-label">Display Name</label>
          <div class="col-sm-10">
            <input type="text" name="display_name" class="form-control" id="ipt-display_name" placeholder="Display Name" value="{{user.display_name|escape}}">
          </div>
        </div>
        <div class="form-group">
          <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </div>
      </form>
    </div>
  </div>

</div>

{% include "admin/inc/footer" %}

<!-- common javascript -->
<script src="{{'default/admin.js'|asset_url}}"></script>
