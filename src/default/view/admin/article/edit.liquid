{% assign title = "Edit Article #"|append:article.id %}
{% include "admin/inc/header" %}

<div class="container">
  <h1 class="text-center">{{title|escape}}</h1>
  <form class="form-horizontal" role="form" method="post">
    <input type="hidden" name="_csrf" value="{{_csrf|escape}}">
    <div class="form-group">
      <label for="ipt-title" class="col-sm-2 control-label">Title</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="ipt-title" placeholder="Title" value="{{article.title|escape}}">
      </div>
    </div>
    <div class="form-group">
      <label for="ipt-summary" class="col-sm-2 control-label">Summary</label>
      <div class="col-sm-10">
        <textarea class="form-control" id="ipt-summary" rows="3">{{article.summary|escape}}</textarea>
      </div>
    </div>
    <div class="form-group">
      <label for="ipt-content" class="col-sm-2 control-label">Content</label>
      <div class="col-sm-10">
        <textarea class="form-control" id="ipt-content" rows="20">{{article.content|escape}}</textarea>
      </div>
    </div>
    <div class="form-group">
      <div class="text-center">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-danger col-sm-offset-1">Delete</button>
      </div>
    </div>
  </form>

</div>

{% include "admin/inc/footer" %}

<!-- common javascript -->
<script src="{{'default/main.js'|asset_url}}"></script>
